@model IEnumerable<Rehber.Models.tblAdmin>

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h2>Admin</h2>

<table class="table">
    <tr>
        <th>
            Kullanıcı Adı
        </th>
        <th>
            Şifre
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KullaniciAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sifre)
            </td>
            <td>
                @Html.ActionLink("Şifre Değiştir", "Edit", new { id = item.ID }) 
            </td>
        </tr>
    }

</table>
